
<% if game.wrong_answers >= 6 %>
    <img class="hangman" src="/images/Hangman-6.png" alt = "hangman image">
    <div class= "losing_message">  
    <p>You Lose!</p> 
    <p><%"The word was #{code}" %></p>
    <%= erb :index %>
    </div>


<% elsif !game.secret_word.any?("_")%>
    <div class = "wining message">
    <p>You Win!</p>
    <p><% "The word was #{code}" %></p>
    </div>

<% else %>
  <%= erb :display_hangman, :locals => {:wrong_answers => wrong_answers} %>
  <%= erb :guess_letter, :locals => {:encrypted_word => encrypted_word,
                                     :code => code,
                                     :guessed_letters => guessed_letters }%>
<% end %>

